<h1>Matches involving <%= @character.name %></h1>
<div class="match-list">
	<div class="row">
		<div class="col-md-6">
			<h3>Victories (<%= @victories.count %>)</h3>
			<%= render 'shared/match_list', matches: @victories %>		
		</div>
		<div class="col-md-6">
			<h3>Defeats (<%= @defeats.count %>)</h3>
			<%= render 'shared/match_list', matches: @defeats %>			
		</div>
	</div>
</div>
