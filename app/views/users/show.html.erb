<h1>Recent Matches for <%= @user.name %></h1>
<div class="match-list">
	<h2>Total Matches (<%= @matches.count %>)</h2>
	<%= render 'shared/match_list', matches: @matches %>
	<div class="row">
		<div class="col-md-6">
			<h3>Victories (<%= @victories.count %>)</h3>
			<%= render 'shared/match_list', matches: @victories %>		
		</div>
		<div class="col-md-6">
			<h3>Defeats (<%= @defeats.count %>)</h3>
			<%= render 'shared/match_list', matches: @defeats %>			
		</div>
	</div>
</div>
